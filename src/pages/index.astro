import ProjectsList from "../components/ProjectsList.jsx";
import { API_BASE_URL } from "../config/api";

export const prerender = false;

const { meta_title, meta_description, current_page } = seoData.home;

// Fetch categories with their projects from real API
const response = await fetch(
  `${API_BASE_URL}/api/categories/project-categories`,
  { cache: "no-store" }
);

if (!response.ok) {
  throw new Error("Failed to fetch project categories");
}

const data = await response.json();

// Transform categories data into projects array for the component
const projects = data.success && data.categories ? 
  data.categories.map(category => ({
    id: category.id,
    slug: category.slug,
    title: category.name,
    category: category.name,
    description: category.description,
    image: `${API_BASE_URL}${category.media?.path || '/placeholder.jpg'}`,
    alt: category.name,
    meta_title: category.meta_title,
    meta_description: category.meta_description
  })) : [];
