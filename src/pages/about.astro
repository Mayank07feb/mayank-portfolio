---
import Layout from "../layouts/Layout.astro";
import { seoData } from "../data/seoData.js";
const { meta_title, meta_description, current_page } = seoData.about;
---

<Layout
  title={meta_title}
  description={meta_description}
  currentPage={current_page}
>
  <div id="tt-content-wrap">
    <div
      id="page-header"
      class="ph-full ph-full-m ph-cap-xxxxlg ph-center ph-image-parallax ph-caption-parallax"
    >
      <div class="page-header-inner tt-wrap">
        <div class="ph-caption">
          <div class="ph-caption-inner">
            <h2 class="ph-caption-subtitle">Mayank Raj</h2>
            <h1 class="ph-caption-title">About Me</h1>
            <div class="ph-caption-description max-width-700">
              I design visuals that don't just look good — they work.<br />
              From brand identities to high-converting social media creatives.
            </div>
          </div>
        </div>
      </div>

      <div class="page-header-inner ph-mask">
        <div class="ph-mask-inner tt-wrap">
          <div class="ph-caption">
            <div class="ph-caption-inner">
              <h2 class="ph-caption-subtitle">Mayank Raj</h2>
              <h1 class="ph-caption-title">Who I Am</h1>
              <div class="ph-caption-description max-width-700">
                Professional graphic designer with 5 years of experience<br />
                focused on branding & visual strategy.
              </div>
            </div>
          </div>
        </div>
      </div>

