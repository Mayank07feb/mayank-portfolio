---
import Layout from "../layouts/Layout.astro";
import { seoData } from "../data/seoData.js";
const { meta_title, meta_description, current_page } = seoData.services;
---

<Layout
  title={meta_title}
  description={meta_description}
  currentPage={current_page}
>
  <div id="tt-content-wrap">
    <div
      id="page-header"
      class="ph-full ph-full-m ph-cap-xxxxlg ph-center ph-image-parallax ph-caption-parallax"
    >
      <div class="page-header-inner tt-wrap">
        <div class="ph-caption">
          <div class="ph-caption-inner">
            <h2 class="ph-caption-subtitle">Comprehensive Solutions</h2>
            <h1 class="ph-caption-title">My Services</h1>
            <div class="ph-caption-description max-width-700">
              From brand identities to high-converting social media creatives<br />
              I provide end-to-end design and marketing solutions
            </div>
          </div>
        </div>
      </div>

      <div class="page-header-inner ph-mask">
        <div class="ph-mask-inner tt-wrap">
          <div class="ph-caption">
            <div class="ph-caption-inner">
              <h2 class="ph-caption-subtitle">Professional Services</h2>
              <h1 class="ph-caption-title">Digital & Print</h1>
              <div class="ph-caption-description max-width-700">
                Custom design solutions that communicate instantly<br />
                build trust visually, and drive business growth
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="ph-social">
        <ul>
          <li>
            <a
              href="https://www.facebook.com"
              class="tt-magnetic-item"
              target="_blank"
              rel="noopener"
              ><i class="fa-brands fa-facebook-f"></i
            ></a>
          </li>
          <li>
            <a
              href="https://dribbble.com"
              class="tt-magnetic-item"
              target="_blank"
              rel="noopener"
              ><i class="fa-brands fa-dribbble"></i
            ></a>
          </li>
          <li>
            <a
              href="https://www.behance.net"
              class="tt-magnetic-item"
              target="_blank"
              rel="noopener"
              ><i class="fa-brands fa-behance"></i
            ></a>
          </li>
          <li>
            <a
              href="#"
              class="tt-magnetic-item"
              target="_blank"
              rel="noopener"
              ><i class="fa-brands fa-instagram"></i
            ></a>
          </li>
        </ul>
      </div>

      <div class="tt-scroll-down">
        <a
          href="#tt-page-content"
          class="tt-scroll-down-inner tt-magnetic-item"
          data-offset="0"
        >
          <div class="tt-scrd-icon"></div>
          <svg viewBox="0 0 500 500">
            <defs>
              <path
                d="M50,250c0-110.5,89.5-200,200-200s200,89.5,200,200s-89.5,200-200,200S50,360.5,50,250"
                id="textcircle"
              ></path>
            </defs>
            <text dy="30">
              <textPath xlink:href="#textcircle"
                >Scroll to Explore - Scroll to Explore -</textPath
              >
            </text>
          </svg>
        </a>
      </div>
    </div>

    <div id="tt-page-content">
      <!-- Digital Media Section -->
      <div
        class="tt-section padding-top-lg-60 padding-top-80 padding-bottom-lg-40 border-top"
      >
        <div class="tt-section-inner tt-wrap max-width-1600">
          <div class="tt-row">
            <div class="tt-col-lg-5">
              <div class="tt-heading tt-heading-xlg">
                <h2 class="tt-heading-title tt-text-reveal">
                  Digital<br /> Media
                </h2>
              </div>
              <div class="text-muted tt-anim-fadeinup">
                <p>High-impact online visuals<br /> that drive engagement</p>
              </div>
            </div>

            <div class="tt-col-lg-1 padding-top-30"></div>

            <div class="tt-col-lg-6 tt-align-self-center tt-anim-fadeinup">
              <p class="text-lg">
                I create social media creatives that give brands a professional
                and consistent look, making pages instantly appear more credible
                and premium.
              </p>

              <p>
                In today's digital landscape, your online presence needs to be
                more than just active—it needs to be impactful. I design
                visuals that not only capture attention but also drive
                engagement and conversions, with a focus on creating cohesive
                visual identity across all platforms.
              </p>

              <p>
                <strong>Services Include:</strong><br />
                • Social Media Creatives & Templates<br />
                • Ad Creatives & Campaign Visuals<br />
                • Promotional Digital Designs<br />
                • Online Brand Communication Strategy<br />
                • Instagram & Facebook Visual Content<br />
                • Reel & Post Cover Designs
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Print Media Section -->
      <div
        class="tt-section padding-top-lg-60 padding-top-80 padding-bottom-lg-40 border-top"
      >
        <div class="tt-section-inner tt-wrap max-width-1600">
          <div class="tt-row">
            <div class="tt-col-lg-5">
              <div class="tt-heading tt-heading-xlg">
                <h2 class="tt-heading-title tt-text-reveal">
                  Print<br /> Media
                </h2>
              </div>
              <div class="text-muted tt-anim-fadeinup">
                <p>Tangible designs that<br /> make lasting impressions</p>
              </div>
            </div>

            <div class="tt-col-lg-1 padding-top-30"></div>

            <div class="tt-col-lg-6 tt-align-self-center tt-anim-fadeinup">
              <p class="text-lg">
                Professional print materials that communicate your brand's
                credibility and quality in physical form.
              </p>

              <p>
                In a digital world, well-designed print materials create
                tangible touchpoints that customers remember. I specialize in
                creating print designs that are not only visually appealing but
                also strategically effective in conveying your message and
                values.
              </p>

              <p>
                <strong>Services Include:</strong><br />
                • Logo Design & Brand Identity Systems<br />
                • Posters, Flyers & Banners<br />
                • Visiting Cards & Business Stationery<br />
                • Brochures & Catalog Design<br />
                • Product Packaging & Label Design<br />
                • Print Ads & Promotional Materials
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Motion Graphics Section -->
      <div
        class="tt-section padding-top-lg-60 padding-top-80 padding-bottom-lg-40 border-top"
      >
        <div class="tt-section-inner tt-wrap max-width-1600">
          <div class="tt-row">
            <div class="tt-col-lg-5">
              <div class="tt-heading tt-heading-xlg">
                <h2 class="tt-heading-title tt-text-reveal">
                  Motion<br /> Graphics
                </h2>
              </div>
              <div class="text-muted tt-anim-fadeinup">
                <p>Dynamic animations that<br /> bring brands to life</p>
              </div>
            </div>

            <div class="tt-col-lg-1 padding-top-30"></div>

            <div class="tt-col-lg-6 tt-align-self-center tt-anim-fadeinup">
              <p class="text-lg">
                I create engaging motion graphics that capture attention and
                communicate your message in seconds.
              </p>

              <p>
                Motion graphics are essential for modern digital communication.
                They help explain complex ideas simply, showcase products
                dynamically, and make your brand stand out in crowded social
                media feeds. My approach focuses on creating animations that
                align with your brand identity while maximizing viewer
                engagement.
              </p>

              <p>
                <strong>Services Include:</strong><br />
                • Logo & Brand Identity Animations<br />
                • Animated Social Media Creatives<br />
                • Promotional Motion Videos<br />
                • Visual Storytelling Content<br />
                • Explainer & Product Demo Videos<br />
                • Animated Infographics & Presentations
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Video Editing Section -->
      <div
        class="tt-section padding-top-lg-60 padding-top-80 padding-bottom-lg-40 border-top"
      >
        <div class="tt-section-inner tt-wrap max-width-1600">
          <div class="tt-row">
            <div class="tt-col-lg-5">
              <div class="tt-heading tt-heading-xlg">
                <h2 class="tt-heading-title tt-text-reveal">
                  Video<br /> Editing
                </h2>
              </div>
              <div class="text-muted tt-anim-fadeinup">
                <p>Professional editing for<br /> maximum impact</p>
              </div>
            </div>

            <div class="tt-col-lg-1 padding-top-30"></div>

            <div class="tt-col-lg-6 tt-align-self-center tt-anim-fadeinup">
              <p class="text-lg">
                High-quality video editing that transforms raw footage into
                compelling brand stories.
              </p>

              <p>
                Video is the most engaging form of content today. I provide
                professional editing services that enhance your footage,
                maintain brand consistency, and deliver messages effectively.
                Whether it's for social media, websites, or presentations, I
                ensure your videos look polished and professional.
              </p>

              <p>
                <strong>Services Include:</strong><br />
                • Reels & Short-form Video Editing<br />
                • Promotional Brand Videos<br />
                • Event Highlights & Recaps<br />
                • Social Media Video Content<br />
                • Corporate & Training Videos<br />
                • YouTube Content & Vlog Editing
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Digital Marketing Section -->
      <div
        class="tt-section padding-top-lg-60 padding-top-80 padding-bottom-lg-40 border-top"
      >
        <div class="tt-section-inner tt-wrap max-width-1600">
          <div class="tt-row">
            <div class="tt-col-lg-5">
              <div class="tt-heading tt-heading-xlg">
                <h2 class="tt-heading-title tt-text-reveal">
                  Digital<br /> Marketing
                </h2>
              </div>
              <div class="text-muted tt-anim-fadeinup">
                <p>Strategic campaigns that<br /> deliver real results</p>
              </div>
            </div>

            <div class="tt-col-lg-1 padding-top-30"></div>

            <div class="tt-col-lg-6 tt-align-self-center tt-anim-fadeinup">
              <p class="text-lg">
                Data-driven digital marketing strategies that connect your brand
                with the right audience.
              </p>

              <p>
                With certifications in Google Analytics and digital marketing, I
                combine creative design with strategic marketing to create
                campaigns that not only look good but also perform. I focus on
                measurable results, clear ROI, and strategies that grow your
                online presence sustainably.
              </p>

              <p>
                <strong>Services Include:</strong><br />
                • Social Media Marketing Strategy<br />
                • Paid Ads Management & Optimization<br />
                • Campaign Planning & Execution<br />
                • Content Strategy & Calendar Planning<br />
                • Online Brand Growth & Positioning<br />
                • Performance Tracking & Analytics
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Why Work With Me Section -->
      <div
        class="tt-section padding-top-lg-60 padding-top-80 padding-bottom-lg-40 border-top"
      >
        <div class="tt-section-inner tt-wrap max-width-1600">
          <div class="tt-row">
            <div class="tt-col-lg-5">
              <div class="tt-heading tt-heading-xlg">
                <h2 class="tt-heading-title tt-text-reveal">
                  Why Work<br /> With Me
                </h2>
              </div>
              <div class="text-muted tt-anim-fadeinup">
                <p>Serious design for<br /> serious businesses</p>
              </div>
            </div>

            <div class="tt-col-lg-1 padding-top-30"></div>

            <div class="tt-col-lg-6 tt-align-self-center tt-anim-fadeinup">
              <p class="text-lg">
                I'm direct, practical, and focused on output — not fancy design
                jargon. My approach is built on clear communication and
                delivering exactly what's needed.
              </p>

              <p>
                <strong>What sets me apart:</strong><br />
                • No template work – every design is custom<br />
                • Strong understanding of Indian market aesthetics<br />
                • Clean, modern, and brand-focused designs<br />
                • Clear communication & on-time delivery<br />
                • Design that looks premium without overdoing it
              </p>

              <p>
                My design philosophy is simple: Good design should communicate
                instantly, build trust visually, support business goals, and
                stay consistent across platforms. If a design doesn't do these
                things, it's just noise.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA Section -->
      <div
        class="tt-section padding-top-xlg-120 padding-bottom-xlg-120 border-top"
      >
        <div class="tt-section-inner tt-wrap">
          <div class="tt-row margin-bottom-40">
            <div class="tt-col-xl-8">
              <div class="tt-heading tt-heading-xxxlg no-margin">
                <h3 class="tt-heading-subtitle tt-text-reveal">
                  Ready to Start?
                </h3>
                <h2 class="tt-heading-title tt-text-reveal">
                  Let's Work<br /> Together
                </h2>
              </div>
            </div>

            <div
              class="tt-col-xl-4 tt-align-self-end tt-xl-column-reverse margin-top-40"
            >
              <div
                class="max-width-600 margin-bottom-10 tt-text-uppercase text-pretty tt-text-reveal"
              >
                If you're serious about your brand image and want designs that
                actually represent your business, let's connect.
              </div>

              <div
                class="tt-big-round-ptn margin-top-30 margin-bottom-xlg-80 tt-anim-fadeinup"
              >
                <a
                  href="/contact"
                  class="tt-big-round-ptn-holder tt-magnetic-item"
                >
                  <div class="tt-big-round-ptn-inner">
                    Start a<br /> Project
                  </div>
                </a>
              </div>

              <div class="contact-info">
                <p>
                  <strong>Email:</strong>
                  <a href="mailto:mayankrajjain.0@gmail.com"
                    >mayankrajjain.0@gmail.com</a
                  >
                </p>
                <p>
                  <strong>Phone / WhatsApp:</strong>
                  <a href="tel:+918923087566">+91 8923087566</a>
                </p>
                <p><strong>Location:</strong> Agra, India</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>